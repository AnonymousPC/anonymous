{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug.compile",
            "group": "none",
            "type": "shell",
            "windows": {
                "command": "g++ -std=c++26 -g -Wall -fno-inline -flarge-source-files -Ddebug=1 -O0 -c main.cpp -o bin/debug/main.o 2>&1 | tee bin/debug/log.txt",
                "options": {
                    "env": {
                        "CPLUS_INCLUDE_PATH": [
                            "D:/My Passport/My Passport - Application/MSYS/ucrt64/include/c++/14.2.0",
                            "D:/My Passport/My Passport - Application/MSYS/ucrt64/include"
                        ]
                    }
                }
            },
            "osx": {
                "command": "g++-14 -std=c++26 -g -Wall -fno-inline -flarge-source-files -Ddebug=1 -O0 -c main.cpp -o bin/debug/main.o 2>&1 | tee bin/debug/log.txt",
                "options": {
                    "env": {
                        "CPLUS_INCLUDE_PATH": "/opt/homebrew/include"
                    }
                }
            }
        },
        {
            "label": "debug.link",
            "group": "none",
            "type": "shell",
            "windows": {
                "command": "g++ -o bin/debug/main.exe -fuse-ld=lld bin/debug/main.o bin/dll/main.dll -lstdc++exp -ladvapi32 -lbcrypt -lkernel32 -lmswsock -lntdll -lshell32 -luser32 -lws2_32 -ltbb12 -lboost_date_time-mt -lboost_filesystem-mt -lboost_iostreams-mt -lboost_locale-mt -lboost_process-mt -lboost_stacktrace_basic-mt -lcrypto -lFLAC -ljpeg -lmpg123 -lpng -lssl -ltiff",
                "options": {
                    "env": {
                        "LIBRARY_PATH": "D:/My Passport/My Passport - Application/MSYS/ucrt64/lib"
                    }
                }
            },
            "osx": {
                "command": "g++-14 -o bin/debug/main -fuse-ld=lld bin/debug/main.o bin/dll/main.dylib -lstdc++exp -lboost_date_time -lboost_filesystem -lboost_iostreams -lboost_locale -lboost_process -lboost_stacktrace_basic -lboost_system -lcrypto -lFLAC -ljpeg -lmpg123 -lpng -lssl -ltiff",
                "options": {
                    "env": {
                        "LIBRARY_PATH": "/opt/homebrew/lib"
                    }
                }
            }
        },
        {
            "label": "debug.run",
            "detail": "debug.run",
            "group": "test",
            "type": "shell",
            "windows": { 
                "command": "start cmd /k bin\\debug\\main.exe"
            },
            "osx": {
                "command": "bin/debug/main"
            }
        },
        {
            "label": "debug",
            "detail": "debug",
            "group": "build",
            "type": "shell",
            "dependsOn": ["debug.compile", "debug.link"],
            "dependsOrder": "sequence",
